<% include header %>

<div class="container">
  <p><strong>Login to your account for accessing the precious content!</strong></p>
  <h1>Login:</h1>
  <form action="/login" method="POST">
    <div class="form-group mx-sm-3 col-md-6">
      <label for="username">Username:</label>
      <input class="form-control" type="text" name="username" placeholder="username" value="">
    </div>
    <div class="form-group mx-sm-3 col-md-6">
      <label for="password">Password:</label>
      <input class="form-control" type="password" name="password" placeholder="password" value="">
    </div>
    <div class="form-group col-md-6">

      <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div class="form-group col-md-6">
      <a href="/register">Don't have an account yet? Resgiter here!</a>
    </div>
  </form>

